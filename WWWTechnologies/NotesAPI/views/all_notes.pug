html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" type="text/css" href="/css/style.css")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0")
        title Notes
        body
            nav
                a#findNoteButton Find a note
                a(href="/web_app/note/add_new_note", methods="get") Add new note
            #hide_body_div.hidden
            div#find_note_menu.hidden
                form(action="/web_app/note/find_note" method="post")
                    label Input note title to search
                        input(placeholder="Title" name="searched_title")
                    button(type="submit") Search
            if notes.length === 0
                main
                    p There are no notes to be displayed. Add a new one!
            else
                ul
                    each note in notes
                        li
                            div.header
                                button(onclick=`show_form('${note.title}')`)
                                    span(class="material-symbols-outlined" id=`${note.title}_update_icon`) update
                                    span.hidden_icon(class="material-symbols-outlined" id=`${note.title}_confirm_icon`) check
                                form(method="POST" action=`/web_app/delete_note/${note.title}`)
                                    button.delete(type="submit")
                                        span(class="material-symbols-outlined") delete
                            div.note_data(id=`${note.title}_data`)
                                h3.note_title #{note.title}
                                div.note_text #{note.data}
                            form.hidden_form(action="/web_app/note/update_note" method="post" id=`${note.title}_form`)
                                input(type="hidden" name="prev_title" value=`${note.title}`)
                                input.title_input(type="text" placeholder="Title" name="note_title" value=`${note.title}`)
                                textarea.data_input(placeholder="Data" type="text" name="note_data") #{note.data}

        script(src="/js/all_notes_controller.js")